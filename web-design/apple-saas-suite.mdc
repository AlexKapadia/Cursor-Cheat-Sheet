// mockData.ts
export interface RevenueDataPoint {
  date: string;
  revenue: number;
  users: number;
  conversions: number;
}

export interface KPIMetric {
  value: number;
  label: string;
  change: number; // percentage change
  trend: 'up' | 'down';
}

/**
 * Generate revenue history for the last N days
 */
export const getRevenueHistory = (days: number = 30): RevenueDataPoint[] => {
  const data: RevenueDataPoint[] = [];
  const today = new Date();
  
  for (let i = days - 1; i >= 0; i--) {
    const date = new Date(today);
    date.setDate(date.getDate() - i);
    
    // Simulate realistic revenue with some variance
    const baseRevenue = 5000;
    const variance = Math.random() * 2000 - 1000;
    const dayOfWeek = date.getDay();
    const weekendBoost = (dayOfWeek === 0 || dayOfWeek === 6) ? 0.8 : 1;
    
    const revenue = Math.max(1000, (baseRevenue + variance) * weekendBoost);
    const users = Math.floor(revenue / 25 + Math.random() * 50);
    const conversions = Math.floor(users * (0.02 + Math.random() * 0.03));
    
    data.push({
      date: date.toISOString().split('T')[0],
      revenue: Math.round(revenue),
      users,
      conversions,
    });
  }
  
  return data;
};

