/**
 * Generate sparkline data (small array for mini charts)
 */
export const getSparklineData = (points: number = 20): number[] => {
  const data: number[] = [];
  let value = 100;
  
  for (let i = 0; i < points; i++) {
    value += (Math.random() * 20 - 10);
    value = Math.max(50, Math.min(200, value)); // Clamp between 50-200
    data.push(Math.round(value));
  }
  
  return data;
};

/**
 * Get user activity data for bar chart
 */
export interface ActivityData {
  hour: string;
  count: number;
}

export const getUserActivity = (): ActivityData[] => {
  const hours = Array.from({ length: 24 }, (_, i) => {
    const hour = i.toString().padStart(2, '0') + ':00';
    // Simulate peak hours (9-17) with higher activity
    const isPeak = i >= 9 && i <= 17;
    const baseCount = isPeak ? 150 : 50;
    const variance = Math.random() * 50;
    
    return {
      hour,
      count: Math.round(baseCount + variance),
    };
  });
  
  return hours;
};
