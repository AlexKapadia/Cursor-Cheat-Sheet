### 8.2 Automated Verification Script

```javascript
// scripts/verify-publish.js
const https = require('https');
const fs = require('fs');

const config = {
  siteUrl: process.env.NEXT_PUBLIC_SITE_URL || 'https://your-site.vercel.app',
  repoUrl: process.env.NEXT_PUBLIC_REPO_URL || 'https://github.com/username/repo',
  docsUrl: process.env.NEXT_PUBLIC_DOCS_URL,
};

async function checkUrl(url) {
  return new Promise((resolve) => {
    if (!url) {
      resolve({ url, status: 'skipped', error: 'URL not configured' });
      return;
    }
    
    https.get(url, (res) => {
      resolve({ url, status: res.statusCode, live: res.statusCode === 200 });
    }).on('error', (err) => {
      resolve({ url, status: 'error', error: err.message });
    });
  });
}

async function verifyPackageJson() {
  const pkg = JSON.parse(fs.readFileSync('package.json', 'utf8'));
  const issues = [];
  
  if (!pkg.repository) {
    issues.push('Missing repository field in package.json');
  }
  
  if (!pkg.homepage) {
    issues.push('Missing homepage field in package.json');
  }
  
  return issues;
}

async function main() {
  console.log('üîç Verifying publish configuration...\n');
  
  // Check URLs
  const urlChecks = await Promise.all([
    checkUrl(config.siteUrl),
    checkUrl(config.repoUrl),
    checkUrl(config.docsUrl),
  ]);
  
  urlChecks.forEach(({ url, status, live, error }) => {
    if (error) {
      console.log(`‚ö†Ô∏è  ${url}: ${error}`);
    } else if (live) {
      console.log(`‚úÖ ${url}: Live (${status})`);
    } else {
      console.log(`‚ùå ${url}: Not accessible (${status})`);
    }
  });
  
  // Check package.json
  const pkgIssues = await verifyPackageJson();
  if (pkgIssues.length > 0) {
    console.log('\n‚ùå Package.json issues:');
    pkgIssues.forEach(issue => console.log(`   - ${issue}`));
  } else {
    console.log('\n‚úÖ Package.json configured correctly');
  }
  
  // Summary
  const allGood = urlChecks.every(c => c.live) && pkgIssues.length === 0;
  if (allGood) {
    console.log('\nüéâ All checks passed! Ready to publish.');
    process.exit(0);
  } else {
    console.log('\n‚ö†Ô∏è  Some checks failed. Please fix before publishing.');
    process.exit(1);
  }
}

main();
```

